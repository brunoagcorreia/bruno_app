<div class="page-contents container">
  <h2>Order Information</h2>
  <strong>Order ID: </strong><%= @order.id %>
  <strong>Product Name: </strong><%= @order.product.name %>
  <strong>Product Price: </strong><%= number_to_currency(@order.product.price.to_f, unit: "€", separator: ",") %>
  <strong>Total Price: </strong><%= number_to_currency(@order.total.to_f, unit: "€", separator: ",") %>
</div>
