<p id="notice"><%= notice %></p>

<h1>Products</h1>
<!-- link to create new products only available to admin -->
<% if signed_in? && current_user.admin? %>
  <%= link_to 'New product', new_product_path %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <% if (@products.empty?) %>
    <p>
      Sorry, but we don't have what your are looking for.
    </p>
    <% else %>
    <%= render @products %>
    <% end %>
  </div>
</div>
